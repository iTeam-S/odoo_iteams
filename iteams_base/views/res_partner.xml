<odoo>

    <record model="ir.ui.view" id="res_partner_form_inherit_iteams_base">
        <field name="name">res.partner.form.inherit.iteams.base</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="is_member"/>
            </field>
            <xpath expr="//page[@name='contact_addresses']" position="attributes">
                <attribute name="autofocus">0</attribute>
            </xpath>
            <xpath expr="//page[@name='contact_addresses']" position="before">
                <page string="Membership" id="membership" autofocus="autofocus">
                    <form>
                        <sheet>
                            <group>
                                <group>
                                    <field name="last_name"/>
                                    <field name="gender"/>
                                    <field name="size"/>
                                </group>
                                <group>
                                    <field name="enterprise_id"/>
                                    <field name="poste"/>
                                </group>
                                <group>
                                    <field name="university_id"/>
                                    <field name="sector_university"/>
                                    <field name="level_universty"/>
                                </group>

                            </group>
                        </sheet>
                    </form>

                </page>
            </xpath>
        </field>
    </record>

